<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:background="@color/my_white" >
        
    <TextView
        android:id="@+id/contact_us_title"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:paddingTop="20dp"
       	android:paddingBottom="20dp"
       	android:text="Contact Us"
       	android:textSize="25sp"
       	android:textColor="@color/abc_primary_text_material_light"
       	android:textStyle="bold" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/contact_us_title"
        android:layout_centerHorizontal="true">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
            <ImageView
            	android:id="@+id/facebook_icon"
            	android:layout_width="wrap_content"
            	android:layout_height="fill_parent"
            	android:scaleType="fitXY"
            	android:src="@drawable/facebook_unclicked_64"
            	android:contentDescription="Facebook Icon" />
            
    		<Button
        		android:id="@+id/facebook_button"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="Facebook"
        		android:textColor="@drawable/button_text"
        		android:textSize="18sp"
        		android:textAllCaps="false"
        		android:gravity="left|center_vertical"
        		android:background="@drawable/button_background" />
    	</LinearLayout>
    
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    	    android:layout_marginTop="5dp"
            android:orientation="horizontal" >
            
            <ImageView
            	android:id="@+id/twitter_icon"
            	android:layout_width="wrap_content"
            	android:layout_height="fill_parent"
            	android:scaleType="fitXY"
            	android:src="@drawable/twitter_unclicked_64"
            	android:contentDescription="Twitter Icon" />
            
    		<Button
        		android:id="@+id/twitter_button"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="Twitter"
        		android:textColor="@drawable/button_text"
        		android:textSize="18sp"
        		android:textAllCaps="false"
        		android:gravity="left|center_vertical"
        		android:background="@drawable/button_background" />
    		
    	</LinearLayout>
	
	    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    	    android:layout_marginTop="5dp"
            android:orientation="horizontal" >
            
            <ImageView
            	android:id="@+id/youtube_icon"
            	android:layout_width="wrap_content"
            	android:layout_height="fill_parent"
            	android:scaleType="fitXY"
            	android:src="@drawable/youtube_unclicked_64"
            	android:contentDescription="Youtube Icon" />
	    
	    	<Button
    	    	android:id="@+id/youtube_button"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="Youtube"
        		android:textColor="@drawable/button_text"
        		android:textSize="18sp"
        		android:textAllCaps="false"
        		android:gravity="left|center_vertical"
        		android:background="@drawable/button_background" />
    	
	    </LinearLayout>
	    
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    	    android:layout_marginTop="5dp"
            android:orientation="horizontal" >
            
            <ImageView
            	android:id="@+id/pinterest_icon"
            	android:layout_width="wrap_content"
            	android:layout_height="fill_parent"
            	android:scaleType="fitXY"
            	android:src="@drawable/pinterest_unclicked_64"
            	android:contentDescription="Pinterest Icon" />
    		
    		<Button
        		android:id="@+id/pinterest_button"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="Pinterest"
        		android:textColor="@drawable/button_text"
        		android:textSize="18sp"
        		android:textAllCaps="false"
        		android:gravity="left|center_vertical"
        		android:background="@drawable/button_background" />
		    
    	</LinearLayout>
    	
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
    	    android:layout_marginTop="5dp"
            android:orientation="horizontal" >
            
            <ImageView
            	android:id="@+id/email_icon"
            	android:layout_width="wrap_content"
            	android:layout_height="fill_parent"
            	android:scaleType="fitXY"
            	android:src="@drawable/email_unclicked_64"
            	android:contentDescription="Email Icon" />
            
    		<Button
        		android:id="@+id/email_button"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="Email"
        		android:textColor="@drawable/button_text"
        		android:textSize="18sp"
        		android:textAllCaps="false"
        		android:gravity="left|center_vertical"
        		android:background="@drawable/button_background" />
    		
    	</LinearLayout>
    </LinearLayout>
</RelativeLayout>
