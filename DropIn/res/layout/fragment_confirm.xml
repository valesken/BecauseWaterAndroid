<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical" >
    
    <com.google.android.gms.maps.MapView 
        android:id="@+id/mapview2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:padding="5dp" >
    
    	<TextView
    	    android:id="@+id/name_of_location_text"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="NAME OF LOCATION:"
    		android:textColor="#000000"
    		android:layout_marginTop="10dp"
    		android:layout_marginLeft="10dp"
    		android:layout_marginBottom="5dp" />
    
    	<EditText
    	    android:id="@+id/name_of_location"
	        android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/name_of_location_text"
			android:layout_margin="1dp"
			android:padding="5dp"
			android:hint="Clever Name Goes Here"
        	android:inputType="text"
        	android:background="#FFFFFF" />
    	
    	<TextView
    	    android:id="@+id/loc_description_text"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/name_of_location"
    	    android:text="DESCRIPTION OF LOCATION:"
    		android:textColor="#000000"
    		android:layout_marginTop="15dp"
    		android:layout_marginLeft="10dp"
    		android:layout_marginBottom="5dp" />
    	
    	<EditText
    	    android:id="@+id/loc_description"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/loc_description_text"
			android:layout_margin="1dp"
			android:padding="5dp"
        	android:background="#FFFFFF"
        	android:inputType="textMultiLine"
        	android:lines="4"
        	android:scrollbars="vertical"
        	android:gravity="top|left"
        	android:hint="Lorem ipsum dolor sit amet, consectetur..." />
    	
    	<Button
    	    android:id="@+id/upload_image_button"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/loc_description"
    	    android:layout_marginTop="15dp"
    	    android:text="Upload an Image"
        	android:textColor="@drawable/button_text"
        	android:textSize="18sp"
        	android:textAllCaps="false"
        	android:background="@drawable/button_background" />
    	
    	<Button
    	    android:id="@+id/add_drop_button"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@+id/upload_image_button"
    	    android:layout_marginTop="5dp"
    	    android:text="Add Drop"
        	android:textColor="@drawable/button_text"
        	android:textSize="18sp"
        	android:textAllCaps="false"
        	android:background="@drawable/button_background" />
    
    </RelativeLayout>
    
</LinearLayout>
